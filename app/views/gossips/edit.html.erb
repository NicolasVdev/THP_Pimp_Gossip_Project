<h1> Edition du potin</h1>

<%= form_for @gossip do |f| %>

  <div class="form-group">
    <label>Titre du gossip</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Contenu du gossip</label>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
<br>
  <div class="form-group" data-turbo=false>
    <button type="submit">Modifier le potin</button>
  </div>

  <% end %>